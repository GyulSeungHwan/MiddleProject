<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.qna.mapper.QCommentMapper">

	<update id="updateQna" parameterType="qcomment">
		update qna_comment set comment_ct=#{commentCT} where post_id=#{postId}
	</update>
	
	  <select id="getcomment" resultType="qcomment">
  	select * from qna_comment where post_id=#{postId}
  </select>
  
    <insert id="insertComment" parameterType="qcomment">
  insert into qna_post(post_id,user_grade,comment_ct)
  	values(post_id=#{postId}, user_grade=#{userGrade},#{commentCT})
  </insert>
</mapper>